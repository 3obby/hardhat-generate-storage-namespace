{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "ES2020",
    "strict": true,
    "types": ["node"],
    "resolveJsonModule": true,
    "lib": ["ES2020"],
    "typeRoots": ["./node_modules/@types", "./src/type-extensions.d.ts"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
